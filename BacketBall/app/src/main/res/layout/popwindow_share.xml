<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="200dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="分享到"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#CB1A48"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_share_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share_wechat"
            android:layout_marginLeft="12.8dp"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/img_share_moments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share_moments"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img_share_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share_qq"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img_share_weibo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/share_weibo"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_bottom_bg"
        android:text="取消"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#9C9C9C"
        />
</LinearLayout>