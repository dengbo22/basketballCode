<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="51.2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_regist_phone_icon"
            android:layout_width="15.36dp"
            android:layout_height="15.36dp"
            android:src="@drawable/icon_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7.5dp"
            />

        <EditText
            android:id="@+id/edtTxt_phone_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColorHint="#C9CFD8"
            android:hint="手机号码"/>


        <example.tiny.widget.CountDownButton
            android:id="@+id/img_getauth"
            android:layout_width="68.26dp"
            android:layout_height="21.33dp"
            android:layout_marginRight="34.13dp"
            android:background="@drawable/btn_get_auth"
            android:textSize="12sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="34.13dp"
        android:layout_marginBottom="15.36dp"
        android:layout_marginTop="15.36dp"
        android:background="#C9CFD8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        >

        <ImageView
            android:id="@+id/img_regist_auth_icon"
            android:layout_width="15.36dp"
            android:layout_height="15.36dp"
            android:src="@drawable/icon_auth"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7.5dp"
            />

        <EditText
            android:id="@+id/edtTxt_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:textSize="14sp"
            android:textColorHint="#C9CFD8"
            android:hint="验证码"/>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="34.13dp"
        android:layout_marginBottom="15.36dp"
        android:layout_marginTop="15.36dp"
        android:background="#C9CFD8" />

    <!-- 分段  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        >

        <ImageView
            android:id="@+id/img_regist_password_icon"
            android:layout_width="15.36dp"
            android:layout_height="15.36dp"
            android:src="@drawable/icon_password"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7.5dp"
            />

        <EditText
            android:id="@+id/edtTxt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColorHint="#C9CFD8"
            android:hint="密码（6~20位）"/>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="34.13dp"
        android:layout_marginBottom="15.36dp"
        android:layout_marginTop="15.36dp"
        android:background="#C9CFD8" />
    <!--  分段  -->





</LinearLayout>